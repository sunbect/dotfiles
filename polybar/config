padding-right = 2

module-margin-left = 0
module-margin-right = 0

font-0 = "iosevka-regular:pixelsize=10;4"
font-1 = "Font Awesome 5 Free Solid:style=Solid:size=10;4"
font-2 = "Font Awesome 5 Free Regular:style=Regular:size=10;4"

modules-left = bspwm i3
modules-center = mpd date temperature
modules-right = spotify eth root home pulseaudio switchaudio memory cpu powermenu

tray-position = right
tray-padding = 4
