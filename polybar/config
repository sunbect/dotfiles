[colors]
;background = ${xrdb:color0:#222}
background = #001B182C
background-alt = #3a335e
;foreground = ${xrdb:color7:#222}
foreground = #dfdfdf
foreground-alt = #1B182C
primary = #ffb52a
secondary = #e60053
alert = #bd2c40

[bar/example]
;monitor = ${env:MONITOR:HDMI-1}
width = 100%
height = 32
;offset-x = 1%
;offset-y = 1%
;radius = 6.0
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = #f00

border-size = 0 
border-color = #00000000

